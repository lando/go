{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "gitAuthor": "rtfm-47 <rtfm47@lando.dev>",
  "packageRules": [
    {
      "matchDepNames": [
        "go-supported-list"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "enabled": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "builders/builders.yml"
      ],
      "matchStrings": [
        "supported:\\n\\s+- '(?<currentVersion>.*?)'"
      ],
      "datasource": "github-releases",
      "lookupName": "go/go",
      "versioning": "semver",
      "currentVersionTemplate": "go{{currentVersion}}",
      "updateDependency": {
        "regex": "supported:\\n([\\s\\S]*?)(?=\\nlegacy:|$)",
        "replacement": "supported:\n- '{{substr newVersion 2}}'\n{{captured_group}}"
      }
    }
  ]
}