{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "npm",
    "custom.regex"
  ],
  "timezone": "UTC",
  "prConcurrentLimit": 3,
  "gitAuthor": "rtfm-47 <rtfm47@lando.dev>",
  "customManagers": [
    {
      "description": "Update patch versions for Go in examples and docs",
      "customType": "regex",
      "fileMatch": [
        "README\\.md$",
        "docs/.*\\.md$",
        "examples/.*/.lando\\.yml$"
      ],
      "matchStrings": [
        "type:\\s*go:(?<currentValue>1\\.[0-9]+\\.[0-9]+)(?:\\s|$|\")",
        "type: go:(?<currentValue>1\\.[0-9]+\\.[0-9]+)(?:\\s|$|\")"
      ],
      "depNameTemplate": "golang-patch-versions",
      "datasourceTemplate": "docker",
      "packageNameTemplate": "golang",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "description": "Auto-merge Go patch version updates",
      "matchDepNames": [
        "golang-patch-versions"
      ],
      "matchDatasources": [
        "docker"
      ],
      "groupName": "golang patch versions",
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "labels": [
        "dependencies",
        "golang",
        "patch"
      ]
    },
    {
      "description": "Disable major/minor Go updates (handled by GitHub Actions)",
      "matchDepNames": [
        "golang-patch-versions"
      ],
      "matchDatasources": [
        "docker"
      ],
      "enabled": false,
      "matchUpdateTypes": [
        "major",
        "minor"
      ]
    },
    {
      "description": "Standard npm dependency updates",
      "matchManagers": [
        "npm"
      ],
      "groupName": "npm dependencies",
      "automerge": true,
      "platformAutomerge": true,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    }
  ],
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{controls}}}{{{footer}}}",
  "prFooter": "---\\n*This PR was automatically generated by Renovate* ðŸ¤–",
  "updateInternalDeps": true
}
