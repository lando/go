{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "gitAuthor": "rtfm-47 <rtfm47@lando.dev>",
  "customManagers": [
    {
      "description": "Update the supported Go versions in the builders",
      "customType": "regex",
      "fileMatch": [
        "builders/builders\\.yml$"
      ],
      "matchStrings": [
        "(?<prefix>  supported:.*?)(?<currentValue>(?:    - '[0-9]+\\.[0-9]+'.*)*)(?<suffix>\\n  legacy:)"
      ],
      "depNameTemplate": "golang-supported-version",
      "datasourceTemplate": "docker",
      "packageNameTemplate": "golang",
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)$",
      "extractVersionTemplate": "^(?<version>1\\.[0-9]+)",
      "autoReplaceStringTemplate": "{{{prefix}}}    - '{{{newVersion}}}'\n{{{currentValue}}}{{{suffix}}}"
    },
    {
      "description": "Update the latest supported Go version in the docs and examples",
      "customType": "regex",
      "fileMatch": [
        "README\\.md$",
        "docs/.*\\.md$",
        "examples/.*/.lando\\.yml$"
      ],
      "matchStrings": [
        "type: go:(?<currentValue>1\\.19)"
      ],
      "depNameTemplate": "golang-docs-examples",
      "datasourceTemplate": "docker",
      "packageNameTemplate": "golang",
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)$",
      "autoReplaceStringTemplate": "type: go:{{{newVersion}}}"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "golang-supported-version",
        "golang-docs-examples"
      ],
      "matchDatasources": [
        "docker"
      ],
      "groupName": "golang minor versions",
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "labels": [
        "dependencies",
        "golang"
      ]
    },
    {
      "matchDepNames": [
        "golang-supported-version",
        "golang-docs-examples"
      ],
      "matchDatasources": [
        "docker"
      ],
      "enabled": false,
      "matchUpdateTypes": [
        "major",
        "patch",
        "pin",
        "digest",
        "rollback",
        "bump"
      ]
    }
  ],
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{controls}}}{{{footer}}}",
  "prFooter": "These are the droids you are looking for: [Renovate](https://renovatebot.com) ðŸ¤–",
  "updateInternalDeps": true,
  "postUpgradeTasks": {
    "commands": [
      "if [[ \"${depName}\" == \"golang-supported-version\" ]]; then MAJOR_MINOR=$(echo \"${newVersion}\" | grep -oE '^[0-9]+\\.[0-9]+'); echo \"## [${MAJOR_MINOR}] - $(date +%Y-%m-%d)\\n\\n### Changed\\n\\n* Added Go ${MAJOR_MINOR} to supported versions\\n\" >> CHANGELOG.md; fi"
    ],
    "fileFilters": [
      "CHANGELOG.md"
    ],
    "executionMode": "update"
  }
}